# Generate light mode SVG favicon from base (swaps colors for light mode)
# Light mode: text=#2c3e50, background=#ecf0f1
generate-svg-light:
    sed 's/fill:#2c3e50/fill:#ecf0f1/g; s/fill:#3498db/fill:#2980b9/g' favicon-base.svg | npx svgo --input - --output favicon-light.svg

# Generate dark mode SVG favicon from base (minimizes with svgo)
# Dark mode: text=#3498db, background=#2c3e50
generate-svg-dark:
    npx svgo --input favicon-base.svg --output favicon-dark.svg

# Generate both light and dark SVG favicons
generate-svg: generate-svg-light generate-svg-dark

# Generate the apple-touch-icon (iOS PWA) from dark mode base
# Uses ImageMagick convert since favicon-base.svg uses paths (no embedded fonts)
# -background sets the background color, -density renders at high DPI for crisp output
generate-apple-icon:
    convert -density 300 -background none favicon-base.svg -resize 192x192 apple-touch-icon.png

# Generate 512x512 icon for PWA manifest
# Higher density for larger size to avoid blurriness
generate-icon-512:
    convert -density 600 -background none favicon-base.svg -resize 512x512 icon-512.png

# Generate all PWA icons
generate-pwa-icons: generate-apple-icon generate-icon-512

# Generate all favicon variants at once
generate-all: generate-svg generate-pwa-icons

